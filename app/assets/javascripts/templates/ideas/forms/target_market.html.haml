%a.inner(ng-click="showModal()")
  %span.title {{ linkTitle }}
  .content {{ idea.target_customer | limitTo:15 }}{{ idea.target_customer.length > 15 ? '...' : ''}}
.modal.fade
  .modal-dialog
    .modal-content
      %form(name="ideaForm" ng-submit="ideaForm.$valid && saveIdea(idea)" novalidate)
        .modal-header
          %button(type="button" class="close" ng-click="hideModal()" aria-label="Close") &times;
          %h2 Target Market
        .modal-body
          .form-group
            %input.form-control(type="text" ng-model="idea.target_customer" placeholder="Who is your ideal customer?" required)
            %span.help-block (e.g. Age, Sex, Income)
          .form-group
            %textarea.form-control(rows="5" ng-model="idea.target_customer_reason" placeholder="Why are they your ideal customer? Why would they value your product?" ng-maxlength="300" required)

        .modal-footer
          %a.btn.btn-warning(ng-click="hideModal()") Cancel
          %button.btn.btn-primary(type="Submit") Save
