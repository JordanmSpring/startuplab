%a.inner(ng-click="showModal()")
  %span.title {{ linkTitle }}
  .content {{ idea.costs | limitTo:80 }}{{ idea.costs.length > 80 ? '...' : ''}}
.modal.fade
  .modal-dialog
    .modal-content
      %form(name="ideaForm" ng-submit="ideaForm.$valid && saveIdea(idea)" novalidate)
        .modal-header
          %button(type="button" class="close" ng-click="hideModal()" aria-label="Close") &times;
          %h2 Costs
        .modal-body
          .form-group
            %textarea.form-control(rows="5" ng-model="idea.costs" ng-maxlength="300" placeholder="What costs will you incur to run?" required)

        .modal-footer
          %a.btn.btn-warning(ng-click="hideModal()") Cancel
          %button.btn.btn-primary(type="Submit") Save
