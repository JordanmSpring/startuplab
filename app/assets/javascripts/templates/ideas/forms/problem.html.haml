%a.inner(ng-click="showModal(idea)")
  %span.title {{ linkTitle }}
  .content {{ idea.problem | limitTo:80 }}{{ idea.problem.length > 80 ? '...' : ''}}
.modal.fade
  .modal-dialog
    .modal-content
      %form(name="ideaForm" novalidate)
        .modal-header
          %button(type="button" class="close" ng-click="hideModal()" aria-label="Close") &times;
          %h2 Problem
        .modal-body
          .form-group
            %input.form-control(type="text" ng-model="idea.problem" placeholder="What problem have you identified?")
          .form-group
            %textarea.form-control(rows="5" ng-model="idea.problem_detail" ng-maxlength="300" placeholder="Describe the problem")
