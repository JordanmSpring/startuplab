%a.inner(ng-click="showModal()")
  %span.title {{ linkTitle }}
  .founders
    %img(ng-repeat="founder in idea.founders" ng-src="{{ founder.user.gravatarUrl + '?size=52' }}")
#md-idea-problems.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h2 Founders
      .modal-body
        %ul
          %li(ng-repeat="founder in idea.founders")
            %img(ng-src="{{ founder.user.gravatarUrl }}")
            {{ founder.user.name }}
            %span(ng-show="founder.user.pending")
              %em (Pending)
            %input.form-control(type="text" ng-model="founder.role" placeholder="Role" required)
        %hr
        .form-group
          %input.form-control(type="email" ng-model="invite.email" placeholder="Email")
          %input.form-control(type="text" ng-model="invite.role" placeholder="Role")
          %btn.btn.btn-default(ng-click="inviteFounder()") Invite
