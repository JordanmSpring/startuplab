%a.inner(ng-click="showModal()")
  %span.title {{ linkTitle }}
  .founders
    %img(ng-repeat="founder in idea.founders" ng-src="{{ founder.user.gravatarUrl + '?size=52' }}")
#md-idea-founders.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h2 Founders
      .modal-body
        %ul
          %li(ng-repeat="founder in idea.founders")
            %sl-founder(ng-model="founder" idea="idea")
          %li(ng-show="idea.mine")
            .founder.invite
              %input.form-control(type="email" ng-model="invite.email" placeholder="Email")
              %input.form-control(type="text" ng-model="invite.role" placeholder="Role")
              %btn.btn.btn-default.btn-sm(ng-click="inviteFounder()") Invite

        .clearfix
