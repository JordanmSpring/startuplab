
angular.module('StartupLab')
.controller('SessionsController', ['$scope', 'Session', function($scope, Session) {
  $scope.session = {};

  $scope.login = function() {
    Session.login($scope.session.email, $scope.session.password, function() {
      /* Failure callback */
      $scope.session.failed = true;
      $scope.session.email = '';
      $scope.session.password = '';
      console.log($('#email').focus());
    });
  }

  $scope.user = {};

  $scope.register = function() {
    Session.register($scope.user);
  }
}]);
