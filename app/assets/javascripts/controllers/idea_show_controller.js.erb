angular.module('StartupLab')
.controller('IdeaShowController', ['$scope', '$routeParams', 'Idea', function($scope, $routeParams, Idea) {

  Idea.find($routeParams.id).success(function(data) {
    $scope.idea = data;
  });

  /* Init isotope */
  $('.grid').isotope({
    itemSelector: '.grid-item',
    masonry: {
      // use outer width of grid-sizer for columnWidth
      columnWidth: 182
    },
    sortBy: 'original-order'
  });

  $scope.boo = function() {
    console.log('clicked boo');
    $('#md-idea-problems').modal('show');
  };
}]);
