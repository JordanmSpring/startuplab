
angular.module('StartupLab').directive("slIdeaPanel", [ 'Idea', function(Idea) {
  return {
    restrict: 'E',
    templateUrl: function(elem, attrs) {
      return attrs.templateUrl;
    },
    controller: 'IdeaPanelController',
    scope: {
      idea: '=ngModel',
      linkTitle: '@'
    },
    link: function(scope, element) {
      scope.modal = element.find('.modal');
      scope.modal.on('hide.bs.modal', function (e) {
        scope.syncIdea();
      });
    }
  }
}]);
