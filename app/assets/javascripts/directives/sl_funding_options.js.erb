angular.module('StartupLab').directive("slFundingOptions", [ 'Idea', function(Idea) {
  return {
    restrict: 'E',
    templateUrl: 'funding/modal.html',
    controller: 'CrowdfundingController',
    scope: {
      idea: '=ngModel',
      linkTitle: '@'
    },
    link: function(scope, element) {
      scope.modal = element.find('.modal');
      scope.modal.on('hide.bs.modal', function (e) {
        if (scope.idea.canEdit) {
          scope.syncFundingOptions();
        }
      });
    }
  }
}]);
