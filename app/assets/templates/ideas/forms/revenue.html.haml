%a.inner(ng-click="showModal(idea)")
  %span.title {{ linkTitle }}
  .inner-content {{ idea.revenue | limitTo:80 }}{{ idea.revenue.length > 80 ? '...' : ''}}
.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button(type="button" class="close" ng-click="hideModal()" aria-label="Close") &times;
        %h2 Business Model-Revenue
      .modal-body
        %form(ng-show="idea.canEdit" name="ideaForm" ng-submit="ideaForm.$valid && saveIdea(idea)" novalidate)
          .form-group
            %textarea.form-control(rows="5" ng-model="idea.revenue" ng-maxlength="300" placeholder="How will you earn income?")
        .content(ng-hide="idea.canEdit")
          %p {{ idea.revenue }}

