%a.inner(ng-click="showModal(idea)")
  %span.title {{ linkTitle }}
  .inner-content {{ idea.costs | limitTo:80 }}{{ idea.costs.length > 80 ? '...' : ''}}
.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button(type="button" class="close" ng-click="hideModal()" aria-label="Close") &times;
        %h2 Costs
      .modal-body
        %form(ng-show="idea.canEdit" name="ideaForm" ng-submit="ideaForm.$valid && saveIdea(idea)" novalidate)
          .form-group
            %textarea.form-control(rows="5" ng-model="idea.costs" ng-maxlength="300" placeholder="What costs will you incur to run?")
        .content(ng-show="!idea.canEdit")
          %p {{ idea.costs }}
