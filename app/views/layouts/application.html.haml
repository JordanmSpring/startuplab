
!!!
%html.html{:lang => "en-US", "ng-app" => "StartupLab", "ng-controller" => "AppController"}
  %head
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags

    :javascript
      document.write('\x3Cscript src="' + (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//webfonts.creativecloud.com/quicksand:n7:all.js" type="text/javascript">\x3C/script>');

    %title View idea
  %body
    #page.clearfix
      / column
      #page_position_content.position_content
        #pu401.clearfix.colelem
          / group
          #u401-bw.browser_width.grpelem
            #u401
              / group
              #u401_align_to_page.clearfix
                /%img#u417-4.grpelem{:alt => "back to Jordan Michaelides", :height => "20", :src => "images/u417-4.png", :width => "170"}/
                / rasterized frame
                #u404.clearfix.grpelem
                  / group
                  #u408-4.clearfix.grpelem
                    / content
                    %p(ng-show="session.isAuthenticated()")
                      Welcome {{ session.currentUser.name }}
                  #u411.clip_frame.clearfix.grpelem
                    / image
                    #u411_clip
                    /  %img#u411_img.position_content{:alt => "", :height => "14", :src => "images/down-arrow-more.png", :width => "15"}/
          #u414-bw.browser_width.grpelem
            #u414
              / group
              #u414_align_to_page.clearfix
                #u410-4.rounded-corners.clearfix.grpelem
                  / content
                  %p Startup Lab
                #u416-4.rounded-corners.clearfix.grpelem
                  / content
                  %p Got a startup idea?
                #u407-4.rounded-corners.clearfix.grpelem
                  / content
                  %p Search Ideas
          #u402.rounded-corners.clip_frame.grpelem
            / image
            %img#u402_img.block{:alt => "", :height => "76", :src => asset_path('startuplabicongreen.png')}
          #u405.clearfix.grpelem
            / column
            #u409-4.clearfix.colelem
              / content
              %p Dashboard
            #u413-4.clearfix.colelem
              / content
              %p(ng-show="session.isAuthenticated()")
                %a(ng-click="session.logout()") Log out
        %div(ng-view)
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
